@model IEnumerable<CrudAspnetCore.Models.Cliente>
@{
    ViewData["Title"] = "Index";
}

<h2>Clientes</h2>

<div class="panel panel-primary">
    <div class="panel-heading">
        <a class="btn btn-default" asp-controller="Clientes" asp-action="create">Add Clientes</a>
    </div>
    <div class="panel-body">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayName("Código")
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Cpf)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Cpf)
                        </td>
                        <td>
                            <a asp-action="Detalhe" asp-route-id="@item.Id" class="btn btn-primary glyphicon glyphicon glyphicon-zoom-in"></a> |
                            <a asp-action="Editar" asp-route-id="@item.Id" class="btn btn-warning glyphicon glyphicon-pencil"></a> |
                            <a asp-action="Deletar" asp-route-id="@item.Id" class="btn btn-danger glyphicon glyphicon-trash"></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

